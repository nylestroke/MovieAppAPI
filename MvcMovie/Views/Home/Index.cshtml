                                    @if (@movie.rating.Contains("%"))
                                    {
                                        var rating = float.Parse(@movie.rating.Substring(0, movie.rating.Length - 1), CultureInfo.InvariantCulture);
                                        @string.Format(CultureInfo.InvariantCulture, "{0:0.0}", MathF.Round(rating * 10) / 10 / 10)
                                    }
                                    else
                                    {
                                        @movie.rating
                                    }
                                    
